from datetime import date, timedelta 

def validar_nombre():
    while True:
        nombre = input("Nombre: ")
        nombre = nombre.strip().replace(" ", "")
        if len(nombre) == 0:
            print("Debe introducir Nombre") 
        elif nombre.isalpha():
            return nombre.upper()
        else:
            print("Introduzca el Nombre correctamente")

def validar_apellido():
    while True:
        nombre = input("Apellido: ")
        nombre = nombre.strip().replace(" ", "")
        if len(nombre) == 0:
            print("Debe introducir Apellido") 
        elif nombre.isalpha():
            return nombre.upper()
        else:
            print("Introduzca el Apellido correctamente")

def validar_telefono():
    while True:
        try:
            telefono = int(input("Celular: "))
            if len(str(telefono)) == 10:
                return str(telefono)
        except ValueError:
            print("Formato incorrecto")
        else:
            print("Cantidad de digitos no valida")

def validar_correo():
    while True:
            correo = input("Correo: ").lower()
            correo = correo.strip().replace(" ","")
            validar = [".com", ".es", ".outlook", ".icloud.com", ".yahoo.com" ]
            if "@" in correo and any(extensiones in correo for extensiones in validar):#any = Vamos a llamar extension a cada str de la variable validar y quiero que busques si hay una extension en la variable correo y quiero que hagas esto con todas las extensiones de la variable validar
                return correo
            else:
                print("El correo debe tener @ y extension de dominio")

def validar_fecha():
    print("Introduzca fecha de nacimiento")
    while True:
        try:
            dia = int(input("Dia: "))
            if dia >= 1 and dia <= 31:
                mes = int(input("Mes: "))
                if mes >= 1 and mes <= 12:
                    anio = int(input("Año: "))
                    if anio >= 1930 and anio <= 2025:
                        return str(date(anio, mes, dia))
        except ValueError:
            print("Formato incorrecto")
        else:
            print("Valor incorrecto")

def validar_fecha_ing():
