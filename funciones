def validar_fecha_agenda():
    print("Fecha de apertura de agenda")
    while True:
        try:
            dia = int(input("Dia: "))
            if dia >= 1 and dia <= 31:
                mes = int(input("Mes: "))
                if mes >= 1 and mes <= 12:
                    anio = int(input("Año: "))
                    if anio >= 1930 and anio <= 2025:
                        return date(anio, mes, dia)
        except ValueError:
            print("Formato incorrecto")
        else:
            print("Valor incorrecto")

def validar_dni():
    print("Introduzca N° de documento")
    while True:
        try:
           nrodoc = int(input("DNI: "))
           if len(str(nrodoc)) == 8:
               print("DNI cargado correctamente")
               return str(nrodoc)
           else:
               print("Cantidad de digitos no valida")
        except ValueError:
            print("Solo se permiten numeros")

def validar_turno():
    print(f"Asignar turno\n"
    f"AM: 09:00 / 15:00\n"
    f"PM: 15:00 / 21:00")
    AM = "09:00 / 15:00"
    PM = "15:00 / 21:00"
    while True:
        turno = input("Turno asignado: ").strip().upper()
        if turno == "AM":
            return AM
        elif turno == "PM":
            return PM
        else:
            print("Introduzca el turno correctamente")

